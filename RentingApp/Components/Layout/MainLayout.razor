@using _1_RentingBS
@using _2_RentingModel
@inherits LayoutComponentBase
@inject ILocalizationService LocalizationService

@* Required *@
<MudThemeProvider />
<MudPopoverProvider />

@* Needed for dialogs *@
<MudDialogProvider />

@* Needed for snackbars *@      
<MudSnackbarProvider />

<div class="page">
    <main style="display: flex; flex-direction: column; min-height: 100vh;">
        <div id="navbar" class="top-row tropical-nav" style="overflow: visible;">
            <a href="/" class="brand-link">
                <div class="icon-class">
                    <img src="/lunikIconRound.png" alt="Logo" style="height: 140%; width: 140%; object-fit: cover;">
                </div>
            </a>
            <a href="/" class="brand-link">
                <MudText Typo="Typo.h4" Style="color: white; font-weight: 700;">Le Belvédère de l'Autre-Bord</MudText>
            </a>

            <div style="display: flex; align-items: center; gap: 1rem; position: relative;">
                <MudMenu AnchorOrigin="Origin.BottomRight" TransformOrigin="Origin.TopRight">
                    <ActivatorContent>
                        <MudIconButton Icon="@Icons.Material.Filled.Language" Color="Color.Inherit" Style="color: white;" />
                    </ActivatorContent>
                    <ChildContent>
                        <MudMenuItem OnClick="@(() => ChangeCulture(SupportedLanguagesEnum.French))">
                            <MudText>Français</MudText>
                        </MudMenuItem>
                        <MudMenuItem OnClick="@(() => ChangeCulture(SupportedLanguagesEnum.English))">
                            <MudText>English</MudText>
                        </MudMenuItem>
                    </ChildContent>
                </MudMenu>
                <a href="https://gitecannelle.com/" target="_blank" class="tropical-link">@Word("About")</a>
            </div>
        </div>

        <article class="content px-4">
            @Body
        </article>

        <footer class="footer-row">
            <MudText Typo="Typo.caption" Style="margin: 0;">© 2025 Lunik Rentals. Tous droits réservés.</MudText>
        </footer>
    </main>
</div>

<div id="blazor-error-ui" data-nosnippet>
    An unhandled error has occurred.
    <a href="." class="reload">Reload</a>
    <span class="dismiss">🗙</span>
</div>
