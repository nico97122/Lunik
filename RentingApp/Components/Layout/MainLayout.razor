@inherits LayoutComponentBase

@* Required *@
<MudThemeProvider />
<MudPopoverProvider />

@* Needed for dialogs *@
<MudDialogProvider />

@* Needed for snackbars *@      
<MudSnackbarProvider /> 

<div class="page">
    <main style="display: flex; flex-direction: column; min-height: 100vh;">
        <div id="navbar" class="top-row tropical-nav">
            <div class="icon-class">
                <img src="/lunikIconRound.png" alt="Logo" style="height: 140%; width: 140%; object-fit: cover;">
            </div>
            <MudText Typo="Typo.h4" Style="color: white; font-weight: 700; letter-spacing: 0.5px;">Lunik rentals</MudText>
            <a href="https://learn.microsoft.com/aspnet/core/" target="_blank" class="tropical-link">À propos</a>
        </div>

        <article class="content px-4" >
            @Body
        </article>

        <footer class="footer-row">
            <MudText Typo="Typo.caption" Style="margin: 0;">© 2025 Lunik Rentals. Tous droits réservés.</MudText>
        </footer>
    </main>
</div>

<div id="blazor-error-ui" data-nosnippet>
    An unhandled error has occurred.
    <a href="." class="reload">Reload</a>
    <span class="dismiss">🗙</span>
</div>
