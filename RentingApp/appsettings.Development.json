{
  "NLog": {
    "throwConfigExceptions": true,
    "targets": {
      "async": true,
      "logfile": {
        "type": "File",
        "fileName": "C:/RentingApp/RentingAppLog-${shortdate}.log",
        "layout":"${longdate}|${level:uppercase=true}|${logger}|${message}${onexception:${newline}${exception:format=tostring}}"

      },
      "logconsole": {
        "type": "ColoredConsole"
      }
    },
    "rules": [

      {
        "logger": "_1_RentingBS.*",
        "minLevel": "Debug",
        "writeTo": "logfile,logconsole"
      },
      {
        "logger": "RentingApp.*",
        "minLevel": "Debug",
        "writeTo": "logfile,logconsole"
      }
    ]
  }
}
