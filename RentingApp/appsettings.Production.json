{
  "NLog": {
    "throwConfigExceptions": true,
    "targets": {
      "console": {
        "type": "Console",
        "layout": "${longdate}|${level}|${logger}|${message}${onexception:inner= ${exception:format=ToString}}"
      },
      "logfile": {
        "type": "File",
        "fileName": "D:/home/LogFiles/RentingAppLog-${shortdate}.log",
        "archiveFileName": "D:/home/LogFiles/RentingAppLog-{#}.log",
        "archiveEvery": "Day",
        "maxArchiveFiles": 7,
        "keepFileOpen": false,
        "layout": "${longdate}|${uppercase:${level}}|${logger}|${message}${onexception:inner= ${exception:format=ToString}}"
      }
    },
    "rules": [
      {
        "logger": "_1_RentingBS.*",
        "minLevel": "Info",
        "writeTo": "logfile"
      },
      {
        "logger": "RentingApp.*",
        "minLevel": "Info",
        "writeTo": "logfile"
      },
      {
        "logger": "Microsoft.AspNetCore.*",
        "minLevel": "Warning",
        "writeTo": "console"
      }
    ]
  }
}
